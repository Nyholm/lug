<container xmlns="http://symfony.com/schema/dic/services">
    <services>
        <service id="lug.resource.registry" class="Lug\Component\Resource\Registry\ResourceRegistry">
            <tag name="lug.registry" />
        </service>

        <service
            id="lug.resource.registry.manager"
            class="Lug\Component\Resource\Registry\ManagerRegistry"
        >
            <tag name="lug.registry" />
        </service>

        <service
            id="lug.resource.registry.repository"
            class="Lug\Component\Resource\Registry\RepositoryRegistry"
        >
            <tag name="lug.registry" />
        </service>

        <service
            id="lug.resource.registry.factory"
            class="Lug\Component\Resource\Registry\FactoryRegistry"
        >
            <tag name="lug.registry" />
        </service>

        <service
            id="lug.resource.registry.domain_manager"
            class="Lug\Component\Resource\Registry\DomainManagerRegistry"
        >
            <tag name="lug.registry" />
        </service>
    </services>
</container>
