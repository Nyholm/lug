<serializer>
    <class
        name="Lug\Component\Locale\Model\Locale"
        exclusion-policy="ALL"
        xml-root-name="locale"
        accessor-order="custom"
        custom-accessor-order="code,enabled,required,createdAt,updatedAt"
    >
        <property name="code" expose="true" type="string" />
        <property name="enabled" expose="true" type="boolean" />
        <property name="required" expose="true" type="boolean" />
        <property name="createdAt" expose="true" type="DateTime" />
        <property name="updatedAt" expose="true" type="DateTime" />
    </class>
</serializer>
