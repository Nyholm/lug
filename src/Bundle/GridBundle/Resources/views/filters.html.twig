{% use '@LugGrid/attributes.html.twig' %}

{% if grid.form is defined %}
    {% set form = grid.form %}
{% endif %}

{% block grid_filters %}
    {% if form is defined %}
        {{ form_start(form, {'action': path(grid.definition.option('grid_route'))}) }}
            {{ form_widget(form) }}
        {{ form_end(form) }}
    {% endif %}
{% endblock %}
