{%- block grid_attributes -%}
    {%- if attr is defined -%}
        {%- for attrname, attrvalue in attr -%}
            {{- " " -}}
            {%- if attrvalue is same as(true) -%}
                {{- attrname }}="{{ attrname }}"
            {%- elseif attrvalue is not same as(false) -%}
                {{- attrname }}="{{ attrvalue }}"
            {%- endif -%}
        {%- endfor -%}
    {%- endif -%}
{%- endblock -%}
